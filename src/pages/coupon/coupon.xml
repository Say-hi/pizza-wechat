<view wx:if="{{ !needUseCoupon }}" class="tab lh80 f30">
  <view catchtap="chooseTab" data-index="0" class="{{ currentIndex == 0 ? 'show main-text-color' : 'noshow' }}">未使用</view>
  <view catchtap="chooseTab" data-index="1" class="{{ currentIndex == 1 ? 'show main-text-color' : 'noshow' }}">已使用</view>
  <view catchtap="chooseTab" data-index="2" class="{{ currentIndex == 2 ? 'show main-text-color' : 'noshow' }}">已失效</view>
</view>

<view wx:if="{{ currentIndex == 0 }}" wx:for="{{ couponArr }}" wx:key="*9" class="coupon">
  <!--左侧-->
  <view class="c-left tac">
    <view>
      <text class="f20">￥</text><text class="f30">{{ item.del }}</text>
    </view>
    <view class="f20">满{{ item.need }}元使用</view>
  </view>
  <!--右侧-->
  <view class="c-right">
    <view class="f30">{{ item.title }}</view>
    <view class="f20">{{ item.time }}</view>
    <view wx:if="{{ needUseCoupon  }}" catchtap="{{ item.need <= orderMoney ?  'useCoupon' : '' }}" data-index="{{ index }}" data-id="{{ item.id }}" class="use-coupon f22 main-text-color">{{ item.need <= orderMoney ?  '立即使用' : '金额不符'  }}</view>
  </view>
</view>

<view wx:if="{{ currentIndex == 1 }}" wx:for="123" wx:key="*10" class="coupon">
<!--左侧-->
<view class="c-left tac">
  <view>
    <text class="f20">￥</text><text class="f30">10</text>
  </view>
  <view class="f20">满20元使用</view>
</view>
<!--右侧-->
<view class="c-right">
  <view class="f30">小程序10元优惠卷</view>
  <view class="f20">有效期30天</view>
</view>
</view>

<view wx:if="{{ currentIndex == 2 }}" wx:for="123" wx:key="*11" class="coupon">
<!--左侧-->
<view class="c-left tac">
  <view>
    <text class="f20">￥</text><text class="f30">10</text>
  </view>
  <view class="f20">满10元使用</view>
</view>
<!--右侧-->
<view class="c-right">
  <view class="f30">小程序10元优惠卷</view>
  <view class="f20">有效期30天</view>
</view>
</view>